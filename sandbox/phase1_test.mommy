mayihave 10 in number as int
mayihave 0 in zero as int
mayihave null in ptr as box

say "--- TEST 1: MATH ---"
say number
add number with 5
say number
subtract number with 3
say number
multiply number with 2
say number
divide number with 4
say number

say "--- TEST 2: POINTERS ---"
replace ptr with number address
say "Pointer Address:"
say ptr
replace ptr with 999 inside
say "Value inside pointer (should be 999):"
say number

say "--- TEST 3: LOGIC ---"
ask if number == 999
    say "Logic check passed. Number is 999."
or
    say "Logic check failed."
done

say "--- TEST 4: LOOPS ---"
punishme 3
    say "I am looping..."
done

say "--- TEST 5: LOOP BREAK ---"
mayihave 0 in i as int
punishme 10
    add i with 1
    say i
    ask if i == 3
        say "Breaking loop at 3..."
        satisfied
    done
done

say "--- TEST COMPLETE ---"
leave
