say "--- STEP 1: DECLARATION & MATH ---"
mayihave 10 in num as int
mayihave 5 in val as int

add num with 10
say "10 + 10 = 20:"
say num

subtract num with 5
say "20 - 5 = 15:"
say num

multiply num with 2
say "15 * 2 = 30:"
say num

divide num with 3
say "30 / 3 = 10:"
say num

say "--- STEP 2: POINTERS (BOXES) ---"
mayihave null in ptr as box

say "Linking pointer to num..."
replace ptr with num address

say "Address of num:"
say ptr

say "Changing value INSIDE pointer to 777..."
replace ptr with 777 inside

say "Check if num changed (should be 777):"
say num

say "--- STEP 3: LOGIC (IF/ELSE) ---"
ask if num == 777
    say "Logic OK: Num is 777."
or
    say "Logic FAIL: This should not print."
done

ask if num < 100
    say "Logic FAIL: 777 is not less than 100."
or
    say "Logic OK: 777 is big."
done

say "--- STEP 4: LOOPS & BREAK ---"
mayihave 0 in i as int

say "Looping until 3 (Break Test):"
punishme 10
    add i with 1
    say i
    
    ask if i == 3
        say "Satisfied. Breaking loop."
        satisfied
    done
done

say "--- TEST COMPLETE ---"
leave
